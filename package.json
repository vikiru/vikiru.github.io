{
  "name": "portfolio-website",
  "version": "3.3.0",
  "description": "Personal portfolio website showcasing my projects and skills. Built using React, React Router and TailwindCSS.",
  "private": true,
  "author": "Visakan Kirubakaran",
  "license": "MIT",
  "homepage": "https://vikiru.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/vikiru/vikiru.github.io"
  },
  "keywords": [
    "Visakan",
    "Kirubakaran",
    "portfolio",
    "website",
    "react",
    "react router",
    "tailwindcss",
    "software",
    "developer"
  ],
  "bugs": {
    "url": "https://github.com/vikiru/vikiru.github.io/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "prepare": "husky",
    "lint": "biome lint",
    "format": "biome check --write",
    "generate-sitemap": "tsx src/scripts/generateSitemap.ts",
    "typecheck": "tsc --noEmit"
  },
  "browserslist": {
    "production": [
      "defaults",
      ">0.01%",
      "not dead",
      "not op_mini all",
      "last 2 chrome version",
      "last 2 firefox version",
      "last 2 safari version"
    ],
    "development": [
      "defaults",
      ">0.01%",
      "not dead",
      "not op_mini all",
      "last 2 chrome version",
      "last 2 firefox version",
      "last 2 safari version"
    ]
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^6.30.2",
    "web-vitals": "^3.5.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/git": "^10.0.1",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "babel-plugin-react-compiler": "^1.0.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "moment": "^2.30.1",
    "postcss": "^8.5.6",
    "postcss-import": "^16.1.1",
    "semantic-release": "^24.2.9",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.4.18",
    "typescript": "~5.9.3",
    "vite": "^7.2.7"
  },
  "lint-staged": {
    "*.{js,mjs,cjs,ts,jsx,tsx}": [
      "pnpm lint"
    ]
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}

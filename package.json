{
  "name": "portfolio-website",
  "version": "3.3.0",
  "private": true,
  "description": "Personal portfolio website showcasing my projects and skills. Built using React, React Router and TailwindCSS.",
  "keywords": [
    "Visakan",
    "Kirubakaran",
    "portfolio",
    "website",
    "react",
    "react router",
    "tailwindcss",
    "software",
    "developer"
  ],
  "license": "MIT",
  "author": "Visakan Kirubakaran",
  "homepage": "https://vikiru.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/vikiru/vikiru.github.io"
  },
  "bugs": {
    "url": "https://github.com/vikiru/vikiru.github.io/issues"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "generate-sitemap": "tsx src/scripts/generateSitemap.ts",
    "lint": "biome lint",
    "format": "biome check --write",
    "typecheck": "tsgo --noEmit",
    "unused": "knip",
    "preview": "vite preview",
    "postinstall": "lefthook install"
  },
  "browserslist": {
    "production": [
      "defaults",
      ">0.01%",
      "not dead",
      "not op_mini all",
      "last 2 chrome version",
      "last 2 firefox version",
      "last 2 safari version"
    ],
    "development": [
      "defaults",
      ">0.01%",
      "not dead",
      "not op_mini all",
      "last 2 chrome version",
      "last 2 firefox version",
      "last 2 safari version"
    ]
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@tanstack/react-router": "^1.153.2",
    "@tanstack/react-router-devtools": "^1.153.2",
    "tailwindcss": "^4.1.18",
    "web-vitals": "^3.5.2",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.10.9",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "@typescript/native-preview": "7.0.0-dev.20260119.1",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "globals": "^16.5.0",
    "knip": "^5.82.1",
    "lefthook": "^2.0.15",
    "lint-staged": "^15.5.2",
    "moment": "^2.30.1",
    "schema-dts": "^1.1.5",
    "semantic-release": "^24.2.9",
    "typescript": "~5.9.3",
    "vite": "^7.3.1"
  }
}
